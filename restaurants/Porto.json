{
  "logo": "Porto.svg",
  "layout": {
    "pages": 4,
    "columns": 2,
    "baseFontSize": "20px",
    "colsPerPage": 3,
    "width": "420mm",
    "height": "297mm"
  },
  "colorPalette": {
    "primary": "#0c1e4d",
    "secondary": "#000000",
    "background": "white",
    "text": "#FFFFFF",
    "off-white": "#BBBBBB"
  },
  "styling": {
    "logoContainer" : {
      "width" : "100%",
      "height" : "40mm"
    },
    "logo" : {
      "width" : "100%",
      "height" : "100%",
      "object-fit" : "contain",
      "backgroundColor" : "white",
      "padding" : "3mm",
      "borderRadius" : "0.5rem"
    },
    "category": {
      "backgroundColor": "rgba(255,255,255,0.6)",
      "color": "var(--clr-primary)",
      "display": "flex",
      "flexDirection": "column",
      "margin": "2mm",
      "padding": "0.5rem",
      "borderRadius": "0.5rem",
      "backdropFilter": "blur(0.25rem)",
      "overflow": "hidden"
    },
    "categoryHeader": {
      "display": "flex",
      "flexDirection": "row",
      "justifyContent": "space-between",
      "backgroundColor": "var(--clr-primary)",
      "alignItems": "center",
      "borderRadius": "0.25rem"
    },
    "categoryName": {
      "color": "white ",
      "width": "100%",
      "fontSize": "1.25rem",
      "textAlign": "center",
      "fontWeight": "bold"
    },
    "categoryPrice": {
      "color": "var(--clr-primary)"
    },
    "categoryDescription": {
      "color": "var(--clr-primary)",
      "textAlign": "center",
      "fontSize": "1.1rem"
    },
    "dishContainer": {
      "display": "grid",
      "gridTemplateColumns": "repeat(1, 1fr)",
      "gap": "0.25rem 1rem",
      "padding": "0.5rem",
      "maxWidth": "100%",
      "boxSizing": "border-box"
    },
    "dish": {
      "backgroundColor": "transparent",
      "width": "100%",
      "display": "grid",
      "gap": 0,
      "gridTemplateRows": "subgrid",
      "gridRow": "span 3"
    },
    "dishHeader": {
      "display": "grid",
      "gridTemplateColumns": "1fr auto",
      "gridTemplateRows": "auto auto",
      "alignItems": "start",
      "height": "min-content"
    },
    "dishName": {
      "color": "var(--clr-primary))",
      "textTransform": "uppercase",
      "fontSize": "0.9rem",
      "fontWeight": "bolder",
      "gridRow": "1"
    },
    "dishPrice": {
      "color": "var(--clr-primary)",
      "float": "right",
      "paddingLeft": "0.5rem"
    },
    "dishDescription": {
      "color": "var(--clr-primary)",
      "fontSize": "0.8rem",
      "gridRow": "3/3",
      "display": "flex",
      "justifyContent": "space-between",
      "flexWrap": "wrap"
    },
    "dietary": {
      "color": "var(--clr-primary)",
      "fontSize": "0.5rem",
      "gridRow": "2/2"
    },
    "page": {
      "padding": "clamp(6mm, 2rem, 100%)",
      "display": "flex",
      "flexDirection": "column",
      "gap": "1mm",
      "flexWrap": "wrap",
      "backgroundColor": "var(--clr-background)",
      "overflow": "hidden",
      "alignItems": "center",
      "pageBreakAfter": "always",
      "backgroundImage": "url('assets/Porto/background.jpg')",
      "backgroundSize": "cover",
      "backgroundPosition": "center",
      "backgroundRepeat": "no-repeat"
    },
    "pages": {
      "display": "grid",
      "placeItems": "center",
      "gap": "0",
      "margin": "0 auto"
    }
  },

