{
  "logo": "Logo2.svg",
  "colorPalette": {
    "primary": "#D93275",
    "secondary": "#000000",
    "background": "#000000",
    "text": "#FFFFFF",
    "off-white": "#BBBBBB"
  },
  "layout": {
    "pages": 1,
    "columns": 2,
    "colsPerPage": 1,
    "width": "210mm",
    "height": "297mm"
  },
  "styling": {
    "logoContainer" : {
      "width" : "100%",
      "height" : "20mm"
    },
    "logo" : {
      "width" : "100%",
      "height" : "100%",
      "object-fit" : "contain"
    },
    "category": {
      "backgroundColor": "rgba(0, 0, 0, 0.5)",
      "color": "white",
      "display": "flex",
      "flexDirection": "column",
      "backdropFilter": "blur(0.25rem)"
    },
    "categoryHeader": {
      "display" : "flex",
      "flexDirection" : "row",
      "gap" : "var(--mantine-spacing-xs)",
      "justifyContent" : "space-between",
      "backgroundColor" : "var(--clr-primary)",
      "marginBottom" : "0.5rem",
      "borderRadius" : "0.5rem",
      "alignItems" : "center"
    },
    "categoryName": {
      "color" : "var(--clr-text)",
      "display": "absolute",
      "width" : "100%",
      "fontSize" : "1.75rem" ,
      "textAlign" : "center",
      "fontFamily" : "BufallyScript",
      "textShadow" : "2px 2px 2px black"
    },
    "categoryPrice": {
      "color" : "white",
      "fontSize" : "1rem"
    },
    "categoryDescription": {
      "color" : "var(--clr-off-white)",
      "textAlign" : "center",
      "marginBottom": "0.5rem",
      "fontSize" : "1.1rem"
      },
    "dishContainer": {
      "display": "grid",
      "gridTemplateColumns": "repeat(2, 1fr)",
      "gap": "0.5rem",
      "padding" : "0.5rem"
    },
    "dish": {
      "backgroundColor" : "transparent",
      "width": "100%",
      "display": "grid",
      "gridTemplateRows": "subgrid",
      "gridRow": "span 3"
    },
    "dishName": {
      "color" : "var(--clr-primary)",
      "textTransform" : "uppercase",
      "fontSize" : "1.2rem",
      "fontWeight" : "bolder",
      "gridRow": "1"
    },
    "dishPrice": {
      "color" : "white"
    },
    "dishDescription": {
      "color" : "white",
      "fontSize" : "1rem",
      "gridRow": "2/2"
    },
    "page": {
      "padding": "clamp(6mm, 2rem, 100%)",
      "display": "flex",
      "flexDirection": "column",
      "gap": "3mm",
      "flexWrap": "wrap",
      "fontFamily": "Roboto, sans-serif",
      "backgroundImage": "url('assets/Rogue/background.jpeg')",
      "backgroundColor": "black",
      "backgroundSize": "cover",
      "backgroundPosition": "center",
      "backgroundRepeat": "no-repeat"
    },
    "pages": {
      "display": "grid",
      "placeItems": "center",
      "gap": "10mm",
      "width": "100%",
      "margin": "0 auto"
    }
  },
