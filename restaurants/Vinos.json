{
  "layout": {
    "pages": 4,
    "columns": 2,
    "baseFontSize": "20px",
    "colsPerPage": 2
  },
  "colorPalette": {
    "primary": "#FEDE4F",
    "secondary": "#000000",
    "background": "#383838",
    "text": "#FFFFFF",
    "off-white": "#BBBBBB"
  },
  "styling": {
    "logoContainer" : {
      "width" : "100%",
      "height" : "30mm"
    },
    "logo" : {
      "width" : "100%",
      "height" : "100%",
      "object-fit" : "contain"
    },
    "category": {
      "backgroundColor": "var(--clr-background)",
      "color": "white",
      "display": "flex",
      "flexDirection": "column",
      "margin": "2mm"
    },
    "categoryHeader": {
      "display" : "flex",
      "flexDirection" : "row",
      "justifyContent" : "space-between",
      "backgroundColor" : "var(--clr-primary)",
      "alignItems" : "center"
    },
    "categoryName": {
      "color" : "black",
      "width" : "100%",
      "fontSize" : "1.25rem" ,
      "textAlign" : "center",
      "fontWeight" : "bold"
    },
    "categoryPrice": {
      "color" : "white"
    },
    "categoryDescription": {
      "color" : "white",
      "textAlign" : "center",
      "fontSize" : "1.1rem"
      },
    "dishContainer": {
      "display": "grid",
      "gridTemplateColumns": "repeat(1, 1fr)",
      "gap": "0.25rem 1rem",
      "padding" : "0.5rem",
      "maxWidth" : "100%",
      "boxSizing" : "border-box"
    },
    "dish": {
      "backgroundColor" : "transparent",
      "width": "100%",
      "display": "grid",
      "gap": 0,
      "gridTemplateRows": "subgrid",
      "gridRow": "span 3"
    },
    "dishHeader": {
      "display" : "grid",
      "gridTemplateColumns" : "1fr auto",
      "gridTemplateRows" : "auto auto",
      "alignItems" : "start",
      "height" : "min-content"
    },
    "dishName": {
      "color" : "var(--clr-primary)",
      "textTransform" : "uppercase",
      "fontSize" : "0.9rem",
      "fontWeight" : "bolder",
      "gridRow": "1"
    },
    "dishPrice": {
      "color" : "white",
      "float": "right",
      "paddingLeft" : "0.5rem"
    },
    "dishDescription": {
      "color" : "white",
      "fontSize" : "0.8rem",
      "gridRow": "3/3",
      "display" : "flex",
      "justifyContent" : "space-between",
      "flexWrap" : "wrap"

    },
    "dietary": {
      "color" : "white",
      "fontSize" : "0.5rem",
      "gridRow": "2/2"
    },
    "page": {
      "padding": "clamp(6mm, 2rem, 100%)",
      "display": "flex",
      "flexDirection": "column",
      "gap": "3mm",
      "flexWrap": "wrap",
      "backgroundColor": "var(--clr-background)"
    },
    "pages": {
      "display": "grid",
      "placeItems": "center",
      "gap": "10mm",
      "width": "100%",
      "margin": "0 auto"
    }
  },
